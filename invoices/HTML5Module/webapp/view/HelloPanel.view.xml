<mvc:View controllerName="com.ui5.invoices.controller.HelloPanel"
xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core">

    <Panel headerText="{i18n>headerPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button press=".onOpenDialog" text="{i18n>helloDialogBut}"  class="sapUiSmallMarginEnd"></Button>
            <Button press=".onShowHello" text="{i18n>btnText}"  class="sapUiSmallMarginEnd"></Button>
            <Input value="{/recipient/name}"  width="60%" valueLiveUpdate="true"  />
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldelements sapthemeHighlight-asColor"></Text>
        </content>
    </Panel> 
    <core:Fragment fragmentName="com.ui5.invoices.view.Form01" type="XML" />
</mvc:View>