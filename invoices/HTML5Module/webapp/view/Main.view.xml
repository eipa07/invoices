<mvc:View controllerName="com.ui5.invoices.controller.Main"
xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Shell >
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                <headerContent>
                <Button id="btnHeader" icon="sap-icon://touch" press=".onOpenDialog" text="{i18n>helloDialogBut}"  class="sapUiSmallMarginEnd"></Button>
                </headerContent>
                    <content>
                        <mvc:XMLView viewName="com.ui5.invoices.view.HelloPanel"></mvc:XMLView>
                        <mvc:XMLView viewName="com.ui5.invoices.view.InvoicesList"></mvc:XMLView>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>